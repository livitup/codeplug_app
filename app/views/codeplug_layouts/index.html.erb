<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Codeplug Layouts</h1>
    <%= link_to "New Codeplug Layout", new_codeplug_layout_path, class: "btn btn-primary" %>
  </div>

  <% if @codeplug_layouts.any? %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Radio Model</th>
            <th>Manufacturer</th>
            <th>Created By</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @codeplug_layouts.each do |codeplug_layout| %>
            <tr>
              <td><%= link_to codeplug_layout.name, codeplug_layout_path(codeplug_layout) %></td>
              <td><%= codeplug_layout.radio_model.name %></td>
              <td><%= codeplug_layout.radio_model.manufacturer.name %></td>
              <td><%= codeplug_layout.user ? codeplug_layout.user.email : "System" %></td>
              <td class="text-end">
                <%= link_to "View", codeplug_layout_path(codeplug_layout), class: "btn btn-sm btn-info me-1" %>
                <%= link_to "Edit", edit_codeplug_layout_path(codeplug_layout), class: "btn btn-sm btn-secondary me-1" %>
                <%= button_to "Delete", codeplug_layout_path(codeplug_layout), method: :delete,
                    class: "btn btn-sm btn-danger",
                    form: { class: "d-inline" },
                    data: { confirm: "Are you sure?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info">
      No codeplug layouts found. <%= link_to "Create the first one", new_codeplug_layout_path, class: "alert-link" %>.
    </div>
  <% end %>
</div>
