<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Networks</h1>
    <%= link_to "New Network", new_network_path, class: "btn btn-primary" %>
  </div>

  <% if @networks.any? %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Website</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @networks.each do |network| %>
            <tr>
              <td><%= link_to network.name, network_path(network) %></td>
              <td><%= network.network_type %></td>
              <td>
                <% if network.website.present? %>
                  <%= link_to network.website, network.website, target: "_blank", rel: "noopener" %>
                <% end %>
              </td>
              <td class="text-end">
                <%= link_to "View", network_path(network), class: "btn btn-sm btn-info me-1" %>
                <%= link_to "Edit", edit_network_path(network), class: "btn btn-sm btn-secondary me-1" %>
                <%= button_to "Delete", network_path(network), method: :delete,
                    class: "btn btn-sm btn-danger",
                    form: { class: "d-inline" },
                    data: { confirm: "Are you sure?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info">
      No networks found. <%= link_to "Create the first one", new_network_path, class: "alert-link" %>.
    </div>
  <% end %>
</div>
