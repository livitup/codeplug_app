<%= form_with model: network do |f| %>
  <% if network.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(network.errors.count, "error") %> prohibited this network from being saved:</h5>
      <ul>
        <% network.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", autofocus: true, required: true %>
    <div class="form-text">The network's name (e.g., Brandmeister, DMRVA, P25 System)</div>
  </div>

  <div class="mb-3">
    <%= f.label :network_type, "Type", class: "form-label" %>
    <%= f.select :network_type,
        Network::NETWORK_TYPES,
        { include_blank: "Select a type (optional)" },
        { class: "form-select" } %>
    <div class="form-text">The type of network</div>
  </div>

  <div class="mb-3">
    <%= f.label :website, class: "form-label" %>
    <%= f.url_field :website, class: "form-control", placeholder: "https://example.com" %>
    <div class="form-text">The network's website URL</div>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: "form-control", rows: 4, placeholder: "Brief description of the network" %>
    <div class="form-text">A brief description of the network and its coverage</div>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", network.persisted? ? network_path(network) : networks_path, class: "btn btn-secondary" %>
  </div>
<% end %>
