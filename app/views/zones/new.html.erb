<div class="container mt-4">
  <h1>New Zone</h1>

  <% if @codeplug %>
    <%= link_to "← Back to Zones", codeplug_zones_path(@codeplug), class: "btn btn-secondary mb-3" %>
  <% else %>
    <%= link_to "← Back to Zones", zones_path, class: "btn btn-secondary mb-3" %>
  <% end %>

  <div class="card">
    <div class="card-body">
      <%= render "form", zone: @zone %>
    </div>
  </div>
</div>
