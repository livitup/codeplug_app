<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Codeplugs</h1>
    <%= link_to "New Codeplug", new_codeplug_path, class: "btn btn-primary" %>
  </div>

  <% if @codeplugs.any? %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Public</th>
            <th class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @codeplugs.each do |codeplug| %>
            <tr>
              <td><%= link_to codeplug.name, codeplug_path(codeplug) %></td>
              <td><%= truncate(codeplug.description, length: 50) || "—" %></td>
              <td><%= codeplug.public ? "✓" : "—" %></td>
              <td class="text-end">
                <%= link_to "View", codeplug_path(codeplug), class: "btn btn-sm btn-info me-1" %>
                <%= link_to "Channels", codeplug_channels_path(codeplug), class: "btn btn-sm btn-success me-1" %>
                <%= link_to "Edit", edit_codeplug_path(codeplug), class: "btn btn-sm btn-secondary me-1" %>
                <%= button_to "Delete", codeplug_path(codeplug), method: :delete,
                    class: "btn btn-sm btn-danger",
                    form: { class: "d-inline" },
                    data: { confirm: "Are you sure?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="alert alert-info">
      No codeplugs found. <%= link_to "Create the first one", new_codeplug_path, class: "alert-link" %>.
    </div>
  <% end %>
</div>
