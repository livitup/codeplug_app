<%= form_with model: codeplug do |f| %>
  <% if codeplug.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(codeplug.errors.count, "error") %> prohibited this codeplug from being saved:</h5>
      <ul>
        <% codeplug.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true, placeholder: "e.g., My Radio Configuration" %>
    <div class="form-text">Give your codeplug a descriptive name</div>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: "form-control", rows: 3, placeholder: "Optional description..." %>
    <div class="form-text">Describe what this codeplug is for</div>
  </div>

  <div class="mb-3 form-check">
    <%= f.check_box :public, class: "form-check-input" %>
    <%= f.label :public, "Make this codeplug public", class: "form-check-label" %>
    <div class="form-text">Public codeplugs can be viewed and cloned by other users</div>
  </div>

  <%= f.hidden_field :user_id, value: codeplug.user_id || current_user&.id %>

  <div class="d-flex gap-2 mt-4">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", codeplug.persisted? ? codeplug_path(codeplug) : codeplugs_path, class: "btn btn-secondary" %>
  </div>
<% end %>
