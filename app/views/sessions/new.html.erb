<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <div class="card">
        <div class="card-header">
          <h1 class="h3 mb-0">Log In</h1>
        </div>
        <div class="card-body">
          <%= form_with url: login_path do |f| %>
            <div class="mb-3">
              <%= label_tag :email, "Email", class: "form-label" %>
              <%= email_field_tag :email, params[:email], class: "form-control", autofocus: true, required: true %>
            </div>

            <div class="mb-3">
              <%= label_tag :password, "Password", class: "form-label" %>
              <%= password_field_tag :password, nil, class: "form-control", required: true %>
            </div>

            <div class="d-grid">
              <%= submit_tag "Log In", class: "btn btn-primary" %>
            </div>
          <% end %>

          <div class="mt-3 text-center">
            <p class="mb-0">Don't have an account? <%= link_to "Sign up", new_user_path %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
