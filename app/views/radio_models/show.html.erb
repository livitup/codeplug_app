<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= @radio_model.name %></h1>
    <div>
      <%= link_to "Edit", edit_radio_model_path(@radio_model), class: "btn btn-primary me-1" %>
      <%= link_to "Back", radio_models_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <dl class="row">
    <dt class="col-sm-3">Manufacturer:</dt>
    <dd class="col-sm-9"><%= @radio_model.manufacturer.name %></dd>

    <dt class="col-sm-3">Supported Modes:</dt>
    <dd class="col-sm-9"><%= @radio_model.supported_modes.join(", ") %></dd>

    <dt class="col-sm-3">Max Zones:</dt>
    <dd class="col-sm-9"><%= @radio_model.max_zones || "Unlimited" %></dd>

    <dt class="col-sm-3">Max Channels per Zone:</dt>
    <dd class="col-sm-9"><%= @radio_model.max_channels_per_zone %></dd>

    <dt class="col-sm-3">Channel Name Lengths:</dt>
    <dd class="col-sm-9">
      Long: <%= @radio_model.long_channel_name_length %>,
      Short: <%= @radio_model.short_channel_name_length %>
    </dd>

    <dt class="col-sm-3">Zone Name Lengths:</dt>
    <dd class="col-sm-9">
      Long: <%= @radio_model.long_zone_name_length %>,
      Short: <%= @radio_model.short_zone_name_length %>
    </dd>
  </dl>
</div>
